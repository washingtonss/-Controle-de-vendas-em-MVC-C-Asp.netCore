
@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <!--esta ação(asp-action="SimpleSearch") está sendo chamada no controlador SalesRecords-->
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button><!--esta ação vai enviar o formulario e chamar a ação do controlador (asp-action="SimpleSearch") que está no inicio do formulário -->
                    </div>
                </div>
            </fieldset>

        </form>
    </div>

</div>

<!--Outro formulário mas agora vai enviar para ação GroupingSearch-->

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <!--esta ação(asp-action="GroupingSearch") está sendo chamada no controlador SalesRecords-->
            <fieldset>
                <legend>Grouping search</legend>
                <!--estou trazendo a data minima-->
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <!--estou trazendo a data maxima -->
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <!--aqui trago a ação de submit(enviar) que quando clicado vai aciona a ação do controlador (asp-action="GroupingSearch")-->
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button><!--esta ação vai enviar o formulario e chamar a ação do controlador (asp-action="SimpleSearch") que está no inicio do formulário -->
                    </div>
                </div>
            </fieldset>

        </form>
    </div>

</div>



